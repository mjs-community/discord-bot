{
  "compilerOptions": {
    "target": "ES2017",
    "types": ["jest", "reflect-metadata"],
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
